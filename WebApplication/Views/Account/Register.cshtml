@model WebApplication.Models.RegisterViewModel
@{
    ViewBag.Title = "Join";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Enter your email and choose a password to join Insight.</h4>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group" id="password-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="col-md-4 control-label" style="text-align:left;" id="password-verdict"></div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" class="btn btn-default" value="Join" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("/Scripts/pwstrength.js")"></script>
    <script language="javascript">
        $(document).ready(function () {
            var options = {};
            options.ui = {
                container: "#password-group",
                showStatus: false,
                showProgressBar: false,
                verdicts: ["Weak password", "Normal password strength", "Good password", "Strong password", "Very Strong password"],
                viewports: {
                    verdict: "#password-verdict"
                }
            };
            $('#Password').pwstrength(options);
        });
    </script>
}
