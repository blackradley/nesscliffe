<div class="row" style="position: relative;">
    <div class=" col-md-4">
    <h2>@ViewBag.Title</h2>
</div>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissible col-md-5 col-sm-6 col-xs-7" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
            </button>
            @ViewBag.Message
        </div>
    }
    @if (ViewBag.Link != null)
    {
        <div class="col-md-2" style="position: absolute; bottom: 11px; right: 0;">@ViewBag.Link</div>
    }
</div>
