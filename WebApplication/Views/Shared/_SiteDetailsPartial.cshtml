@using WebApplication.Helpers
@model DataAccess.Site
<div class="row">
    <div class="col-md-6">
        @Html.LabelFor(model => model.Name)
        @Html.ActionLink(Model.Name, "Edit", "Sites", new { id = Model.Id }, null)
    </div>
    <div class="col-md-3">
        @Html.LabelFor(model => model.Postcode)
        <a href="@(String.Format("https://www.google.com/maps?q={0}", Model.Postcode))" target="blank" style="text-transform:uppercase;">
            @Html.DisplayFor(model => model.Postcode, new { htmlAttributes = new { @style = "text-transform:uppercase" } })
        </a>
    </div>
    <div class="col-md-3 hidden-sm hidden-xs">
        <label>Features</label>
        @Html.SiteSummaryIconsFor(ViewData.Model)
    </div>
</div>


