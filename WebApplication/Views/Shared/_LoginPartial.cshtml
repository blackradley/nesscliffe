@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Signed in as " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, 
                    htmlAttributes: new { title = "Manage your Account" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" title="Sign out of your account">Sign out</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Join", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Terms and Conditions", "TermsAndConditions", "Account", routeValues: null, htmlAttributes: new { id = "termsAndConditionsLink" })</li>
        <li>@Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}