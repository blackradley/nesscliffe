@using DataAccess
@using WebApplication.Helpers
@model DataAccess.Month
<div class="form-group">
    <div class="row form-inline">
        @Html.SiteYesNoFor(model => model.IsDonationOpportunity)
    </div>
</div>
<div id="DonationOpportunity">
    <div class="row">
        <div class="form-group col-sm-4 col-md-3">
            @Html.SiteTextBoxFor(model => model.IncomeDonation, prefix: "£")
        </div>
        <div class="form-group col-sm-4 col-md-3">
            @Html.SiteTextBoxFor(model => model.NumberDonationOpportunities)
        </div>
    </div>
    <div class="form-group">
        @Html.SiteSectionLabel("Donation Position", "Tell us about the position of your donation boxes")
        <div class="row form-inline">
            @Html.SiteCheckBoxFor(model => model.DonationVisibleFromEntrance)
            @Html.SiteCheckBoxFor(model => model.PayToDonate)
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.DistanceToDonation, htmlAttributes: new { @class = "control-label", @for = "DistanceToDonation" })
                @Html.SiteHelpFor(model => model.DistanceToDonation)
                <div class="form-inline">
                    @Html.EditorFor(model => model.DistanceToDonation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.DropDownListFor(model => model.DistanceToDonationUnits, new SelectList(Units.DistanceIndoor, "Key", "Value"))
                </div>
                @Html.ValidationMessageFor(model => model.DistanceToDonation)
            </div>
        </div>
    </div>
</div>