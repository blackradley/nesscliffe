@using DataAccess
@using WebApplication.Helpers
@model Month
<div class="row">
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.NumberArtefacts)
    </div>
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.ArtefactsDisplay) %
    </div>
</div>
<div class="form-group">
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.IsCollectionOutstanding)
    </div>
</div>
<div class="row">
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.NumberCollectionsOutstanding)
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        @Html.SiteRatingScaleFor(model => model.ProgrammeMassAppeal, Scales.Rating7, "Niche Interest", "Mass Market Appeal")
    </div>
</div>
