    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.NumberArtefacts)
    </div>
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.ArtefactsDisplay) %
    </div>
</div>
<div class="form-group">
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.IsCollectionOutstanding)
