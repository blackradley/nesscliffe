@using Localization
@using WebApplication.Helpers
@using WebApplication.Models
@model AttentionViewModel
@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = Html.DisplayFor(model => model.Month.MonthTime, "MonthYearDateTime");
}
<div class="row">
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.MonthAttention.MarketingSpend)
    </div>
</div>

<div class="form-group">
    @Html.SiteSectionLabel("TV Coverage", "Check the boxes which apply to your site")
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.MonthAttention.RegionalTv)
        @Html.SiteCheckBoxFor(model => model.MonthAttention.NationalTv)
        @Html.SiteCheckBoxFor(model => model.MonthAttention.OverseasTv)
    </div>
</div>

<div class="row">
    <div class="form-group col-md-9">
        @Html.SiteTextBoxFor(model => model.MonthAttention.WebsiteUrl)
    </div>
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.MonthAttention.WebsiteVisitors)
    </div>
</div>

<div class="row">
    <div class="form-group col-md-6">
        @Html.SiteTextBoxFor(model => model.MonthAttention.FacebookUrl)
    </div>
    <div class="form-group col-md-6">
        @Html.SiteTextBoxFor(model => model.MonthAttention.TwitterUrl)
    </div>
</div>

<div class="row">
    <div class="form-group col-md-6">
        @Html.SiteTextBoxFor(model => model.MonthAttention.FlickrUrl)
    </div>
    <div class="form-group col-md-6">
        @Html.SiteTextBoxFor(model => model.MonthAttention.InstagramUrl)
    </div>
</div>

<div class="row">
    <div class="form-group col-md-6">
        @Html.SiteTextBoxFor(model => model.MonthAttention.YoutubeUrl)
    </div>
    <div class="form-group col-md-6">
        @Html.SiteTextBoxFor(model => model.MonthAttention.VimeoUrl)
    </div>
</div>

<div class="row">
    <div class="form-group col-md-6">
        @Html.SiteTextBoxFor(model => model.MonthAttention.PinterestUrl)
    </div>
</div>
