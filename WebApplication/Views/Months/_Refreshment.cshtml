@using DataAccess
@using WebApplication.Helpers
@model DataAccess.Month
<div class="row">
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.IncomeCatering)
    </div>
</div>
<div class="form-group">
    @Html.SiteSectionLabel("Café Position", "Check the boxes which apply to your site")
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.PayToCafe)
        @Html.SiteCheckBoxFor(model => model.CafeVisibleFromEntrance)
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        @Html.LabelFor(model => model.DistanceToCafe, htmlAttributes: new { @class = "control-label", @for = "DistanceToCafe" })
        @Html.SiteHelpFor(model => model.DistanceToCafe)
        <div class="form-inline">
            @Html.EditorFor(model => model.DistanceToCafe, new { htmlAttributes = new { @class = "form-control" } })
            @Html.DropDownListFor(model => model.DistanceToCafeUnits, new SelectList(Units.DistanceIndoor, "Key", "Value"))
        </div>
        @Html.ValidationMessageFor(model => model.DistanceToCafe)
    </div>
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.NumberCafeSeats)
    </div>
</div>
<div class="form-group">
    @Html.SiteSectionLabel("Café Type or Style", "Check the boxes which you consider apply to your café")
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.IsBasserie)
        @Html.SiteCheckBoxFor(model => model.IsBuffet)
        @Html.SiteCheckBoxFor(model => model.IsCafe)
    </div>
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.IsCafeteria)
        @Html.SiteCheckBoxFor(model => model.IsCoffeehouse)
        @Html.SiteCheckBoxFor(model => model.IsDestinationRestaurant)
    </div>
</div>
<div class="form-group">
    @Html.SiteSectionLabel("Catering Provider", "Check the boxes which you consider apply to your café")
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.IsCateringInHouse)
        @Html.SiteCheckBoxFor(model => model.IsCateringOutToLocalAuthority)
        @Html.SiteCheckBoxFor(model => model.IsCateringOutToCompany)
    </div>
</div>

