@using DataAccess
@using WebApplication.Helpers
@model Month
<div class="form-group">
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.IsRetail)
    </div>
</div>
<div class="row">
    <div class="form-group col-md-3 pounds">
        @Html.SiteTextBoxFor(model => model.IncomeRetail)
    </div>
</div>
<div class="form-group">
    @Html.SiteSectionLabel("Shop Position", "Check the boxes which apply to your site")
    <div class="row form-inline">
        @Html.SiteCheckBoxFor(model => model.PayToShop)
        @Html.SiteCheckBoxFor(model => model.ShopVisibleFromEntrance)
        @Html.SiteCheckBoxFor(model => model.ExitViaShop)
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        @Html.LabelFor(model => model.DistanceToShop, htmlAttributes: new { @class = "control-label", @for = "DistanceToShop" })
        @Html.SiteHelpFor(model => model.DistanceToShop)
        <div class="form-inline">
            @Html.EditorFor(model => model.DistanceToShop, new { htmlAttributes = new { @class = "form-control" } })
            @Html.DropDownListFor(model => model.DistanceToShopUnits, new SelectList(Units.DistanceIndoor, "Key", "Value"))
        </div>
        @Html.ValidationMessageFor(model => model.DistanceToShop)
    </div>
    <div class="form-group col-md-6">
        @Html.LabelFor(model => model.AreaShop, htmlAttributes: new { @class = "control-label", @for = "AreaShop" })
        @Html.SiteHelpFor(model => model.AreaShop)
        <div class="form-inline">
            @Html.EditorFor(model => model.AreaShop, new { htmlAttributes = new { @class = "form-control" } })
            @Html.DropDownListFor(model => model.AreaShopUnits, new SelectList(Units.AreaIndoor, "Key", "Value"))
        </div>
        @Html.ValidationMessageFor(model => model.AreaShop)
    </div>
</div>
<div class="row">
    <div class="form-group col-md-3">
        @Html.SiteTextBoxFor(model => model.NumberProducts)
    </div>
    <div class="form-group col-md-3 percentage">
        @Html.SiteTextBoxFor(model => model.PercentageRelatedProducts)
    </div>
</div>

