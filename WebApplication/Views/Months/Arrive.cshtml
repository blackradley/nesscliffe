@model DataAccess.Month
@using Localization
@using WebApplication.Helpers
@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = Html.DisplayFor(model => model.MonthTime, "MonthYearDateTime");
}

<div class="row">
    <div class="form-group col-md-3">
        @Html.LabelFor(model => model.HoursMonday, htmlAttributes: new { @for = "HoursMonday" })
        @Html.SiteHelpFor(model => model.HoursMonday)
        @Html.EditorFor(model => model.HoursMonday, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.HoursMonday)
    </div>
</div>



