@model IEnumerable<ClassLibrary.Site>

@{
    ViewBag.Title = "My Sites";
}

<h2>@ViewBag.Title</h2>

<div>
    @Html.ActionLink("Create a New Site", "Create")
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Postcode</th>
        <th class="hidden-sm hidden-xs">Last Changed</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Postcode)</td>
            <td class="hidden-sm hidden-xs"></td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Months", "Index", "Months", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
