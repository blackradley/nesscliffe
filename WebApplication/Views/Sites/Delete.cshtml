@model ClassLibrary.Site
@{
    ViewBag.Title = "Delete this site?";
}
<h2>@ViewBag.Title</h2>
@Html.Partial("../Sites/_Details", @Model)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group col-md-9">
            <input type="submit" value="Delete This Site" class="btn btn-default" />
        </div>
        <div class="form-group col-md-3">
            @Html.ActionLink("Back to My Sites", "Index")
        </div>
    </div>
}


