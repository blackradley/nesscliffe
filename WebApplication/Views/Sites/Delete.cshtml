@model ClassLibrary.Site
@{
    ViewBag.Title = "Delete this Site";
}
<h2>@ViewBag.Title</h2>
@Html.Partial("../Sites/_Details", @Model)
<h3>Are you sure you want to delete this site?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group col-md-3">
            <input type="submit" value="Delete this Site" class="btn btn-default" />
        </div>
        <div class="form-group col-md-3">
            @Html.ActionLink("Back to Sites List", "Index")
        </div>
    </div>
}


