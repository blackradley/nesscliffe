@using Localization
@model DataAccess.Site
@{
    ViewBag.Title = "Delete this site?";
    ViewBag.Link = Html.ActionLink("Back to " + Resources.LabelSitesList, "Index");
}
@Html.Partial("_PageTitlePartial")

@Html.Partial("_SiteDetailsPartial", @Model)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group col-md-9">
            <input type="submit" value="Delete This Site" class="btn btn-primary" />
        </div>
    </div>
}


