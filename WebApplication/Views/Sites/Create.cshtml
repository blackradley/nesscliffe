@using DataAccess
@using Localization
@using WebApplication.Helpers
@model DataAccess.Site
@{
    ViewBag.Title = "Create a New Site";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Partial("~/Views/Sites/_CreateEdit.cshtml");
    <div class="row">
        <div class="form-group col-md-9">
            <input type="submit" value="Create New Site" class="btn btn-default" />
        </div>
        <div class="form-group col-md-3">
            @Html.ActionLink("Back to " + Resources.LabelSitesList, "Index")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script language="javascript">
        $(document).ready(function () {
            if ($("#AreaIndoor").value == undefined) $("#AreaIndoor").val("0");
            if ($("#AreaOutdoor").value == undefined) $("#AreaOutdoor").val("0");
        });
    </script>
}