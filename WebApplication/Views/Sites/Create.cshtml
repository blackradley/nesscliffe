@using WebApplication.Helpers
@model ClassLibrary.Site

@{
    ViewBag.Title = "Create a New Site";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="form-group col-md-9">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label", @for = "name" })
            <a href="#" data-toggle="tooltip" data-title="The name of the site so you can identify it while you work.">
                <span class="glyphicon glyphicon-info-sign"></span>
            </a>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @name = "name", @style = "max-width: 500px;" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.Postcode, htmlAttributes: new { @class = "control-label", @for = "postcode" })
            <a href="#" data-toggle="tooltip" data-title="Postcode of the site so we can find it on a map.">
                <span class="glyphicon glyphicon-info-sign"></span>
            </a>
            @Html.EditorFor(model => model.Postcode, new { htmlAttributes = new { @class = "form-control", @name = "postcode" } })
            @Html.ValidationMessageFor(model => model.Postcode, "", new { @class = "text-danger" })
        </div>
    </div>
    <label>Type of Site</label>
    <div class="row form-inline">
        <div class="checkbox col-md-3 col-sm-6">
            <label>
                @Html.EditorFor(model => model.Museum)
                @Html.LabelFor(model => model.Museum)
                <a href="#" data-toggle="tooltip" data-title="Does your site include a musuem?">
                    <span class="glyphicon glyphicon-info-sign"></span>
                </a>
            </label>
        </div>
        <div class="checkbox col-md-3 col-sm-6">
            <label>
                @Html.EditorFor(model => model.Accreditation)
                @Html.LabelFor(model => model.Accreditation)
                <a href="#" data-toggle="tooltip" data-title="Do you have Arts Council of England Accreditation?">
                    <span class="glyphicon glyphicon-info-sign"></span>
                </a>
            </label>
        </div>
        <div class="checkbox col-md-3 col-sm-6">
            <label>
                @Html.EditorFor(model => model.Castle)
                @Html.LabelFor(model => model.Castle)
                <a href="#" data-toggle="tooltip" data-title="Is there a castle or fortified house at your site?">
                    <span class="glyphicon glyphicon-info-sign"></span>
                </a>
            </label>
        </div>
        <div class="checkbox col-md-3 col-sm-6">
            <label>
                @Html.EditorFor(model => model.HistoricHouse)
                @Html.LabelFor(model => model.HistoricHouse)
                <a href="#" data-toggle="tooltip" data-title="Is there a historic house at your site?">
                    <span class="glyphicon glyphicon-info-sign"></span>
                </a>
            </label>
        </div>
    </div>

    <div class="row form-inline">
        <div class="checkbox col-md-3 col-sm-6">
            <label>
                @Html.EditorFor(model => model.ArtsCentre)
                @Html.LabelFor(model => model.ArtsCentre)
                <a href="#" data-toggle="tooltip" data-title="Is your site an Arts Centre?">
                    <span class="glyphicon glyphicon-info-sign"></span>
                </a>
            </label>
        </div>
        <div class="checkbox col-md-3 col-sm-6">
            <label>
                @Html.EditorFor(model => model.Gallery)
                @Html.LabelFor(model => model.Gallery)
                <a href="#" data-toggle="tooltip" data-title="Is there a gallery at your site?">
                    <span class="glyphicon glyphicon-info-sign"></span>
                </a>
            </label>
        </div>
    </div>

    <div class="row form-inline">
        @SiteHelpers.Checkbox(@Html.EditorFor(model => model.WorldHeritageSite),
                            @Html.LabelFor(model => model.WorldHeritageSite),
                            "Is your site in a UNESCO World Heritage Site?")
        @Html.SiteCheckbox(model => model.WorldHeritageSite, "Is your site in a UNESCO World Heritage Site?")

        @SiteHelpers.Checkbox(@Html.EditorFor(model => model.NationalTrust),
                            @Html.LabelFor(model => model.NationalTrust),
                             "Is your site in the National Trust")
     
    </div>





    <div class="row form-group">
        <div class="col-md-10 col-md-offset-9">
            <input type="submit" value="Create New Site" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Sites List", "Index")
</div>
